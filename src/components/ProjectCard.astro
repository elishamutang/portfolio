---
import "../styles/global.css";

const frontmatter = Astro.props;
const technologyBackground = "hsl(0, 0%, 20%)";
const technologies = ["HTML", "CSS", "JavaScript"];
---

<style define:vars={{ technologyBackground }}>
  .card {
    align-items: flex-start;
  }

  h1 {
    margin-bottom: 0.5rem;
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0.8rem 0 0.5rem 0;
  }

  .technologies :global(p) {
    border: 2px solid var(--technologyBorder);
    background-color: var(--technologyBackground);
    border-radius: 0.4rem;
    padding: 0.3rem;
    color: white;
    font-size: clamp(1rem, 1vw, 2rem);
  }

  .live-and-repo {
    width: 100%;
    margin: 1rem 0 0 0;

    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .live-and-repo :global(a) {
    color: white;
  }
</style>

<div class:list={[frontmatter.class, "card"]}>
  <h1>{frontmatter.title}</h1>
  <slot name="img" />
  <slot />
  <div class="technologies">
    {technologies.map((tech) => <p>{tech}</p>)}
    <slot name="technologies" />
  </div>
  <div class="live-and-repo">
    <slot name="live-and-repo" />
  </div>
</div>
